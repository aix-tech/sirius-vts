{
  "name": "sirius-vts",
  "version": "0.0.1",
  "description": "Sirius Vue template",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "format": "prettier --write . --ignore-path .prettierignore",
    "style": "stylelint \"**/*.(vue|scss|css|less)\" --fix"
  },
  "author": "aix-tech <rafit@qq.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,tsx,ts,cjs,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less,sass,vue,html}": [
      "stylelint --allow-empty-input --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.6.5",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.19.4",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^7.0.4",
    "prettier": "^3.1.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.10.5"
  }
}
